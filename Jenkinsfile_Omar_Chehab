pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
        PYTHON = '%VIRTUAL_ENV%\\Scripts\\python.exe'
        PIP = '%VIRTUAL_ENV%\\Scripts\\pip.exe'
    }

    stages {
        stage('Setup') {
            steps {
                bat "py -m venv %VIRTUAL_ENV%"
                bat "%PIP% install --upgrade pip"
                bat "%PIP% install -r requirements.txt"
            }
        }

        stage('Lint') {
            steps {
                // Don't fail the build on lint warnings
                bat "%PYTHON% -m flake8 app.py || exit 0"
            }
        }

        stage('Test') {
            steps {
                bat "%PYTHON% -m pytest -q"
            }
        }

        stage('Coverage') {
            steps {
                bat "%PYTHON% -m coverage run -m pytest"
                bat "%PYTHON% -m coverage xml -o coverage.xml"
            }
            post {
                always {
                    archiveArtifacts artifacts: 'coverage.xml', allowEmptyArchive: true
                }
            }
        }

        stage('Security Scan') {
            steps {
                bat "%PYTHON% -m bandit -r . -f xml -o bandit.xml || exit 0"
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bandit.xml', allowEmptyArchive: true
                }
            }
        }

        stage('Deploy') {
            steps {
                bat "call deploy.bat || echo 'deploy skipped'"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
