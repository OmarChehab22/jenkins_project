pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
        PYTHON = "${env.WORKSPACE}/${VIRTUAL_ENV}/bin/python"
        PIP = "${env.WORKSPACE}/${VIRTUAL_ENV}/bin/pip"
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    
                    if (!fileExists("${env.WORKSPACE}/${VIRTUAL_ENV}")) {
                        sh "python3 -m venv ${VIRTUAL_ENV}"
                    }
                    sh "source ${VIRTUAL_ENV}/bin/activate && ${PIP} install --upgrade pip && ${PIP} install -r requirements.txt"
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    sh "source ${VIRTUAL_ENV}/bin/activate && flake8 app.py || true"
                    
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh "source ${VIRTUAL_ENV}/bin/activate && pytest -q"
                }
            }
        }

        stage('Coverage') {
            steps {
                script {
                    
                    sh "source ${VIRTUAL_ENV}/bin/activate && coverage run -m pytest && coverage xml -o coverage.xml || true"
                    
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'coverage.xml', allowEmptyArchive: true
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    
                    sh "source ${VIRTUAL_ENV}/bin/activate && bandit -r . -f xml -o bandit.xml || true"
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bandit.xml', allowEmptyArchive: true
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    
                    
                    echo "Deploying application..."
                    
                    sh "bash deploy.sh || echo 'deploy step skipped or failed'"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
