pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
        PYTHON = 'C:\\Users\\Ab03meir\\AppData\\Local\\Programs\\Python\\Python313\\python.exe'
    }

    stages {
        stage('Setup') {
            steps {
                bat "%PYTHON% -m venv %VIRTUAL_ENV%"
                bat "%VIRTUAL_ENV%\\Scripts\\python -m pip install --upgrade pip"
                bat "%VIRTUAL_ENV%\\Scripts\\python -m pip install -r requirements.txt"
            }
        }

        stage('Lint') {
            steps {
                bat "%VIRTUAL_ENV%\\Scripts\\python -m flake8 app.py || exit 0"
            }
        }

        stage('Test') {
            steps {
                bat "%VIRTUAL_ENV%\\Scripts\\python -m pytest -q"
            }
        }

        stage('Coverage') {
            steps {
                bat "%VIRTUAL_ENV%\\Scripts\\python -m coverage run -m pytest"
                bat "%VIRTUAL_ENV%\\Scripts\\python -m coverage xml -o coverage.xml"
            }
            post {
                always {
                    archiveArtifacts artifacts: 'coverage.xml', allowEmptyArchive: true
                }
            }
        }

        stage('Security Scan') {
            steps {
                bat "%VIRTUAL_ENV%\\Scripts\\python -m bandit -r . -f xml -o bandit.xml || exit 0"
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bandit.xml', allowEmptyArchive: true
                }
            }
        }

        stage('Deploy') {
            steps {
                bat "call deploy.bat || echo 'deploy skipped'"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
